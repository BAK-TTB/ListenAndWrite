@using ListenAndWrite.Models;
@*định nghĩa kiểu dữ liệu cho biến Model*@
@model List<chude>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon headphones"></i><span class="break"></span>Audios</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().chuDe)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().levels)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="center">
                                @Html.DisplayFor(modelItem => item.chuDe)
                            </td>
                            <td class="center">
                                @Html.DisplayFor(modelItem => item.levels)
                            </td>
                            <td class="center">
                                <a class="btn btn-info" href="@Url.Action("ChinhSuaChuDe", new { @idChuDe=item.idChuDe})">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("XoaChuDe", new { @idChuDe=item.idChuDe})">
                                    <i class="halflings-icon white trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->

</div><!--/row-->