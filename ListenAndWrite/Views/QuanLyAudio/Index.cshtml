@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<ListenAndWrite.Models.audio>

@{
    ViewBag.Title = "Quản Lý Audio";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
@*@Html.ActionLink("Thêm mới sách", "ThemMoi")*@
<div style="margin-bottom: 20px;">
    <a href="/QuanLyAudio/ThemMoiChuDe" id="ThemMoiChuDe" class="btn btn-primary">Thêm chủ đề</a>
</div>
<br />
@Html.Action("ChuDePartial", "QuanLyAudio")
<br />
<div style="margin-bottom: 20px;">
    <a href="/QuanLyAudio/ThemMoi" id="ThemMoi" class="btn btn-primary">Thêm Audio</a>
</div>
<br />
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon headphones"></i><span class="break"></span>Audios</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().url)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().text)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().idChuDe)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().chudes.levels)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="center">
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="center">
                            <audio controls>
                                <source src="@Url.Content("~/fileAudio/"+@Html.DisplayFor(modelItem => item.url))" type="audio/mpeg">
                            </audio>
                        </td>
                        <td class="center">
                            @Html.DisplayFor(modelItem => item.text)
                        </td>
                        <td class="center">
                            @Html.DisplayFor(modelItem => item.chudes.chuDe)
                        </td>
                        <td class="center">
                            @Html.DisplayFor(modelItem => item.chudes.levels)
                        </td>
                        <td class="center">
                            <a class="btn btn-success" href="@Url.Action("HienThi", new { @idAudio=item.idAudio})">
                                <i class="halflings-icon white zoom-in"></i>
                            </a>
                            <a class="btn btn-info" href="@Url.Action("ChinhSua", new { @idAudio=item.idAudio})">
                                <i class="halflings-icon white edit"></i>
                            </a>
                            <a class="btn btn-danger" href="@Url.Action("Xoa", new { @idAudio=item.idAudio})">
                                <i class="halflings-icon white trash"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->

</div><!--/row-->